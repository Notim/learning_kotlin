            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtNomeCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"
                android:textSize="15sp">
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtAgendamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agendado para: 12/11/2019 Ã€s 19:30"
